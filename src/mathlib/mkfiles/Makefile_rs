#Makefile for the DIFFER rs cluster

# FORTRAN-90
FC=mpif90.openmpi
FFLAGS = -O3 -fdefault-real-8 -fdefault-double-8 -ffree-line-length-none
OPENMP = -fopenmp

# Fortran routine files
OBJS_ROUT = \
hrmsym.o dqagse_qlk.o cpqr79.o rpqr79.o dsort.o ceik.o ceie.o davint.o calci0.o calci1.o slatecroutines.o

all: $(OBJS_ROUT)
	ar -cr librout.a $(OBJS_ROUT)

%.o:%.f90
	$(FC) ${FFLAGS} $(OPENMP) -c $<

clean:
	rm -f *.a *.o



