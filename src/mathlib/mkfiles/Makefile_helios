#Makefile for the helios platform

# FORTRAN AND OPENMP VERSION
FC = mpif90 -r8 -O3 -fopenmp
# COMPILER FLAGS 
#FFLAGS = -x f95-cpp-input -ffree-line-length-none \
#-freal-8-real-16 -freal-4-real-16 -finteger-4-integer-8 -finit-local-zero


# FORTRAN-90 
FFFLAGS = -r8 -O3 -fopenmp
 
#FC=$(F90)
#FFLAGS=$(F90FLAGS) -g

# Debugging options
#DEBUG=-g
DEBUG=

# Fortran routine files
OBJS_ROUT = \
p01abf.o x02amf.o x02ajf.o d01ahz.o d01ahu.o x02bbf.o d01ahx.o d01ahy.o d01fcf.o d01ahf.o \
g05caz.o g05cay.o x04aaf.o x04baf.o p01abz.o g05caf.o d01ahv.o d01ahw.o  \
hrmsym.o dqagse.o cpqr79.o rpqr79.o dsort.o rf.o rd.o davint.o calci0.o calci1.o slatecroutines.o

all: $(OBJS_ROUT)
	ar -cr librout.a $(OBJS_ROUT)

%.o:%.f90
	$(FC) ${FFLAGS} ${DEBUG} -c $<

clean:
	rm -f *.a *.o



